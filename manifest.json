{
    "manifest_version": 2,

    "name": "Think",
    "description": "Piensa antes de insultar.",
    "version": "0.1",

    "options_page": "options.html",
    "content_scripts": [ {
            "matches": ["*://*/*"],
            "js": ["jquery-2.1.3.min.js", "dictionary.js", "think.js" ],
            "all_frames":true,
            "css": ["font-awesome.min.css", "think.css"]
    }],
    "web_accessible_resources": [
        "pic.png",
        "fonts/*",
        "font-awesome.min.css",
        "think.css",
        "dictionary.js",
        "utils.js"
    ],
    "permissions": [
        "tabs",
        "storage"
    ]
    // ,
    // "icons":{
    //     "36": "icon-32.png",
    //     "48": "icon-48.png"
    // }
}
